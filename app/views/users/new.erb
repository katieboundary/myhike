<h1>Sign up </h1>
<div class="error">
<% if @errors %>
  <% @errors.each do |error| %>
    <p><%= error %></p>
  <% end %>
<% end %>
</div>

<p>Register as a new user:</p>
<form action="/users" method="post">
  <input type="text" name="user[full_name]" placeholder="Enter your full name">
  <p></p>
  <br>
  <input type="email" name="user[email]" placeholder="Enter your email">
  <p></p>
  <br>
  <input type="password" name="user[password]" placeholder="Enter your password">
  <p></p>
  <br>
  <input type="submit" value="Sign Up">
</form>

